<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="root" prefHeight="530" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" stylesheets="/fxml/CSS/style.css" xmlns="http://javafx.com/javafx/8.0.112" fx:controller="logic.InstructionsController">
    <children>
        <Label fx:id="result" layoutX="300" layoutY="30" minHeight="20" minWidth="69" text="Instructions">
            <font>
                <Font name="Arial" size="30" />
            </font>
        </Label>
        <Label fx:id="line1" layoutX="40" layoutY="70" text="The purpose of this demo is to show property testing in action.&#xD;You have been tasked with a situation every student will face&#xD;in their life: is this room tidy?">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="line2" layoutX="40" layoutY="180" text="You will be given a series of rooms, for each room you will only be able to&#xD;view limited areas of each room, and you will not be able to see all of the&#xD;room.">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="line3" layoutX="40" layoutY="290" text="With this limited information you must make an informed decision&#xD;to decide if the room is tidy, or far from acceptable tidiness.&#xD;Remember that there are different standards of every situation!">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>

        <Button fx:id="transbutton" layoutX="600" layoutY="420" onAction="#handleButtonAction" text="Page transition" />
    </children>
</AnchorPane>