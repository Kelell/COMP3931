<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="root" prefHeight="530" prefWidth="800" stylesheets="/fxml/CSS/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112" fx:controller="logic.L2S2Controller">
    <children>
        <Label fx:id="label" layoutX="300" layoutY="10" minHeight="20" minWidth="69" text="Was the Room:">
            <font>
                <Font name="Arial" size="24" />
            </font>
        </Label>
        <Label fx:id="result" layoutX="310" layoutY="50" minHeight="20" minWidth="69" text="">
            <font>
                <Font name="Arial" size="30" />
            </font>
        </Label>
        <Label fx:id="answer" layoutX="250" layoutY="100" minHeight="20" minWidth="69" text="">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="tidy" layoutX="70" layoutY="150" minHeight="20" minWidth="69" text="">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="far" layoutX="70" layoutY="350" minHeight="20" minWidth="69" text="">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>


        <Button fx:id="yes" layoutX="93.0" layoutY="50.0" minWidth="175" onAction="#tidyAction" text="Tidy" />
        <Button fx:id="no" layoutX="512.0" layoutY="50.0" minWidth="175" onAction="#farAction" text="Far From" />

        <ImageView fx:id="image1" fitHeight="150" fitWidth="150" layoutX="50.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I1.png" />
            </image>
        </ImageView>
        <ImageView fx:id="image2" fitHeight="150" fitWidth="150" layoutX="200.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I2.png" />
            </image>
        </ImageView>
        <ImageView fx:id="image3" fitHeight="150" fitWidth="150" layoutX="50.0" layoutY="380.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I3.png" />
            </image>
        </ImageView>
        <ImageView fx:id="image4" fitHeight="150" fitWidth="150" layoutX="500.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I4.png" />
            </image>
        </ImageView>
        <ImageView fx:id="image5" fitHeight="150" fitWidth="150" layoutX="350.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I5.png" />
            </image>
        </ImageView>
        <ImageView fx:id="image6" fitHeight="150" fitWidth="150" layoutX="650.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@assets/L2I6.png" />
            </image>
        </ImageView>

        <Button fx:id="transbutton" layoutX="600" layoutY="420" onAction="#handleButtonAction" text="Page transition" visible="false" />

    </children>
</AnchorPane>
