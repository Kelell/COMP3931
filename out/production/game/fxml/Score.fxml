<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<AnchorPane id="root" prefHeight="530" prefWidth="800" stylesheets="/fxml/CSS/style.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.ScoreController">
    <children>
        <Label fx:id="title" layoutX="231.0" layoutY="30.0" minHeight="20" minWidth="69" text="Your final score was:">
            <font>
                <Font name="Arial" size="30" />
            </font>
        </Label>
        <Label fx:id="result" layoutX="350.0" layoutY="116.0">
            <font>
                <Font name="Arial" size="60" />
            </font>
        </Label>
        <Label fx:id="line2" layoutX="231.0" layoutY="220.0">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="line3" layoutX="200.0" layoutY="300.0" text="Would you like to submit your score?" visible="false">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Label fx:id="line4" layoutX="173.0" layoutY="330.0" text="Press the enter key to submit" visible="false">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
        <Button fx:id="yes" layoutX="170.0" layoutY="360.0" onAction="#yesAction" text="Yes" visible="false"/>
        <Button fx:id="no" layoutX="460.0" layoutY="360.0" onAction="#noAction" text="No" visible="false"/>
        <Button fx:id="score" layoutX="190.0" layoutY="116.0" onAction="#scoreAction" text="Press here to see your score!" />
        <TextField fx:id="text" layoutX="173.0" layoutY="280.0" minWidth="300" minHeight="50" onAction="#nameAction" text="Please enter your name" visible="false">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </TextField>
    </children>
</AnchorPane>
